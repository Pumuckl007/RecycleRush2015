package main;

import java.awt.BorderLayout;
import java.util.HashMap;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JTextPane;

public class OutputWriter {
	private HashMap<String, Double> numbers = new HashMap<String, Double>();
	private HashMap<String, Boolean> booleans = new HashMap<String, Boolean>();
	private JTextPane text;
	OutputWriter(){
		JFrame frame = new JFrame("FrameDemo");

		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

		text = new JTextPane();
		text.setText("Starting");
		frame.getContentPane().add(text, BorderLayout.CENTER);

		frame.pack();

		frame.setVisible(true);
		(new WindowUpdater()).start();
	}
	public void putNumber(String key, double value){
		System.out.println(key + " : " + value);
		numbers.put(key, value);
	}
	public void putBoolean(String key, boolean value){
		System.out.println(key + " : " + value);
		booleans.put(key, value);
	}
	public double getNumber(String key){
		return numbers.get(key);
	}
	public boolean getBoolean(String key){
		return booleans.get(key);
	}
	public static void setClientMode(){
		System.out.println("This is now client mode");
	}
	public static void setTeam(int number){
		System.out.println(number);
	}
	public static OutputWriter getTable(String name){
		System.out.println(name);
		return new OutputWriter();
	}
}
