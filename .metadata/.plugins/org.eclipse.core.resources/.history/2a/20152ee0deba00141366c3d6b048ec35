package main;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Paint;

import javax.swing.JComponent;

public class ConnetionIndicator extends JComponent{

	private static final long serialVersionUID = -5385133776832672049L;
	public void paint(Graphics g) {
		super.paint(g);
		Graphics2D g2 = (Graphics2D) g;
		Paint colorPaint = new Paint(new Color(red,green,blue));
		g2.setPaint(paint);
		g.fillOval(10, 2, this.getHeight()-4, this.getHeight()-4);
		g.drawOval(10, 2, this.getHeight()-4, this.getHeight()-4);
		System.out.println("Painted");
	}
	
}
